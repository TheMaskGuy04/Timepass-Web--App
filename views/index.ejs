    <% if (locals.heading == "Hobbie") { %>
        <% if (typeof(result) == "string") { %>
            <h2><%= heading %>:</h2>
            <p><%= result %></p>
        <% } else { %>
            <div class="container">
                <h2><%= heading %>:</h2>
                <p>Title: <%= result.hobby %></p>
                <p>Link: <a href="<%= result.link %>" target="_blank"><%= result.link %></a></p>
            </div>
        <% } %>
    <% } %>

    <% if (locals.heading == "Exercise") { %>
        <script>document.querySelector(".index").style.height = "100%"</script> 

        <% if (typeof(result) == "string") { %>
            <h2><%= heading %>:</h2>
            <p><%= result %></p>
        <% } else { %>
            <div class="container">
                <h2><%= heading %>:</h2>
                <% for( let i = 0; i < result.length; i++ ) { %>
                    <h6><%= i+1 %>. Name: <%= result[i].name %></h6>
                    <p>Muscle: <%= result[i].muscle %></p>
                    <p>Difficulty: <%= result[i].difficulty %></p>
                    <p>Instruction: <%= result[i].instructions %></p>
                <% } %>
            </div>
        <% } %>
    <% } %>

    <% if (locals.heading == "QR Code") { %>

        <script>document.querySelector(".index").style.height = "100%"</script> 

        <div class="container">
            <h2><%= heading %>:</h2>
            <% let src = "data:image/png;base64," + result %>

            <img src="<%= src %>" />
            <br>
            <a href="<%= src %>" download="QR-Image">
                <button type="button" class="btn btn-primary m-3">Download</button>
            </a>
        </div>
    <% } %>

    <% if (locals.heading == "Weather") { %>

        <script>document.querySelector(".index").style.height = "100%"</script> 

        <div class="container">
            <h2><%= heading %>:</h2>
            <p>Wind Speed: <%= result.wind_speed %></p>
            <p>Wind Degrees: <%= result.wind_degrees %></p>
            <p>Temp: <%= result.temp %></p>
            <p>Humidity: <%= result.humidity %></p>
            <p>Min Temp: <%= result.min_temp %></p>
            <p>Max Temp: <%= result.max_temp %></p>
            <p>Cloud PCT: <%= result.cloud_pct %></p>
            <p>Feels like: <%= result.feels_like %></p>
            <p>Sunrise: <%= result.sunrise %></p>
            <p>Sunset: <%= result.sunset %></p>
        </div>
    <% } %>
    
    <% if (locals.heading == "Fact" || locals.heading == "Joke") { %>
        <!-- <% console.log("Inside"); %> -->
        <div class="container">
            <h2><%= heading %>:</h2>
            <p><%= result %></p>
        </div>
    <% } %>
    
    <script src="../index.js"></script>
</body>